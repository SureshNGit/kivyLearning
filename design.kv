<LoginScreen>:
    GridLayout:
        cols:1
        GridLayout:
            cols:1
            Label:
                text: "User Login"
            TextInput:
                hint: "Username"
            TextInput:
                hint: "Password"
            Button:
                text: "Login"
        GridLayout:
            cols:2
            Button:
                text: "Forget Passsword?"
            Button:
                text: "Sign Up"
                on_press: root.signup()
<SignUpScreen>:
    GridLayout:
        cols: 1
        Label:
            text: "User Registration"
        TextInput:
            id: username
            hint: "Username"
        TextInput:
            id: password
            hint: "Password"
        Button:
            text: "Add"
            on_press: root.add_user(root.ids.username.text,root.ids.password.text)


<RootWidget>:
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "sign_up_screen"